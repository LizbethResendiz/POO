        "class Figuras:\n",
        "  def __init_(self):\n",
        "    self.a=0\n",
        "    self.b=0\n",
        "    self.c=0\n",
        "\n",
        "  def areas(self):\n",
        "\n",
        "    print(\"Elige una opción\")\n",
        "    print(\"1_Circulo\")\n",
        "    print(\"2_Cuadrado\")\n",
        "    print(\"3_Triangulo\")\n",
        "\n",
        "    r=int(input(\"Opcion\"))\n",
        "    return r\n",
        "\n",
        "  def cuadrado(self, b,h):\n",
        "    area=b*h\n",
        "    return area\n",
        "\n",
        "  def triangulo(self, b1,h1):\n",
        "    area=(b1*h1)/2\n",
        "    return area\n",
        "\n",
        "  def circulo(self, r):\n",
        "    area=3.1416*(r**2)\n",
        "    return area\n",
        "\n",
        "obj=Figuras()\n",
        "S=obj.areas()\n",
        "\n",
        "if S==1:\n",
        "  obj.a=float(input(\"Dame el radio\"))\n",
        "  res=obj.circulo(obj.a)\n",
        "  print(\"El area del circulo : \",res)\n",
        "elif S==2:\n",
        "  obj.a=float(input(\"Dame la base del cuadrado\"))\n",
        "  obj.b=float(input(\"Dame la altura del cuadrado\"))\n",
        "  res=obj.cuadrado(obj.a,obj.b)\n",
        "  print(\"El area del cuadrado : \",res)\n",
        "else:\n",
        "  obj.a=float(input(\"Dame la base del triangulo\"))\n",
        "  obj.b=float(input(\"Dame la altura del triangulo\"))\n",
        "  res=obj.triangulo(obj.a,obj.b)\n",
        "  print(\"El area del triangulo : \",res)"
